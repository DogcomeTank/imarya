<!DOCTYPE html>
<html>
<title>imarya</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="/style/productsManagement.css">
<link rel="icon" href="/icon/linkLogo.png">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<!-- data table -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="/script/productTableScript.js"></script>


<head>
    <script>
    </script>
</head>

<body>

    <div class="w3-bar productManagementNav">
        <a href="/products/" class="w3-bar-item w3-button">Home</a>
        <a href="/products/receiving" class="w3-bar-item w3-button">Receiving</a>
        <a href="/api/addNewProduct" class="w3-bar-item w3-button">New Product</a>
        <button class="w3-bar-item w3-button" onclick="navProductLocationBtn()">New Location</button>
        <button class="w3-bar-item w3-button" onclick="navCategoryBtn()">New Category</button>
    </div>

    <div class="tableContainer w3-margin-top" style="width:95%; margin:auto;">
        <table id="products" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>IPN</th>
                    <th>productName</th>
                    <th>description</th>
                    <th>by</th>
                    <th>img</th>
                    <th>price</th>
                    <th>createDay</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>IPN</th>
                    <th>productName</th>
                    <th>description</th>
                    <th>by</th>
                    <th>img</th>
                    <th>price</th>
                    <th>createDay</th>
                </tr>
            </tfoot>


        </table>
    </div>

    <!-- Modals -->
    <!-- display product Qty -->
    <div id="productQty" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container">
                <span onclick="document.getElementById('productQty').style.display='none'" class="w3-button w3-display-topright w3-xlarge">&times;</span>

                <div class="w3-cell-row productInfo">
                    <div class="w3-container w3-cell">
                        <h4 id="modalProductName">Hello.</h4>
                    </div>
                    <div class="w3-container w3-cell w3-cell-middle modalProductEdit">
                        <button class="w3-btn" id="productQtyBtn" onclick="productEditBtn()">Edit</button>
                    </div>
                </div>

                <div class="w3-cell-row w3-margin-bottom" id="productQtyDiv">
                </div>
            </div>
        </div>
    </div>

    <!-- update product info -->
    <div id="productDetails" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container">
                <span onclick="document.getElementById('productDetails').style.display='none'" class="w3-button w3-display-topright w3-xlarge w3-text-red">&times;</span>

                <form class="w3-container w3-margin w3-padding" id="updateProductInfoForm">
                    <h2>Edit Product Info</h2>
                    <label>Product ID</label>
                    <input class="w3-input w3-border-0" type="text" name="productIdForm" id="productIdForm" disabled>

                    <label>IPN</label>
                    <input class="w3-input w3-border-bottom" type="text" name="ipn" id="ipn">

                    <label>Product Name</label>
                    <input class="w3-input w3-border-bottom" type="text" name="productName" id="productName">

                    <label>Description</label>
                    <input class="w3-input w3-border-bottom" type="text" name="description" id="description">

                    <label>Made by</label>
                    <input class="w3-input w3-border-bottom" type="text" name="by" id="by">

                    <label>Price</label>
                    <input class="w3-input w3-border-bottom" type="text" name="price" id="price">

                    <label>Image</label>
                    <input class="w3-input w3-border-bottom" type="text" name="img" id="img">

                    <br>
                    
                    <select class="w3-select" name="availability">
                        <option selected disabled>Display on website?</option>
                        <option value="0">No</option>
                        <option value="1">Show on website</option>
                        <option value="2">Show on Admin login only</option>
                    </select>

                    <br>

                    <input type="submit" class="w3-btn w3-margin-top w3-deep-orange" value="Submit" id="modalUpdateProductBtn">

                </form>


            </div>
        </div>
    </div>


    <!-- modal for product location -->
    <div id="productLocation" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container w3-padding-large">
                <span onclick="document.getElementById('productLocation').style.display='none'" class="w3-button w3-display-topright w3-xlarge w3-text-red">&times;</span>

                <!-- add new location -->
                <div class="w3-cell-row w3-margin-bottom">
                    <div class="w3-container w3-cell w3-cell-middle">
                        <input class="w3-input w3-border" type="text" placeholder="New Location" id="modalNewLocationInput">
                    </div>
                    <div class="w3-container w3-cell w3-cell-middle">
                        <button class="w3-button w3-large w3-circle w3-ripple w3-teal" onclick="modalAddNewLocationBtn()">+</button>
                    </div>
                </div>

                <div id="modalLocationList" class="modalLocationList">
                    <table class="w3-table" id="locationListTable">
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- modal - Add new product -->
    <div id="addNewProduct" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container w3-padding-large">
                <span onclick="document.getElementById('addNewProduct').style.display='none'" class="w3-button w3-display-topright w3-xlarge w3-text-red">&times;</span>

                <!-- add new product -->
                <form class="w3-container w3-margin w3-padding" id="addNewProductForm">
                    <h2>Add New Product</h2>

                    <label>IPN</label>
                    <input class="w3-input w3-border-bottom" type="text" name="ipn" id="ipn">

                    <label>Product Name</label>
                    <input class="w3-input w3-border-bottom" type="text" name="productName" id="newProductName">

                    <label>Description</label>
                    <input class="w3-input w3-border-bottom" type="text" name="description" id="newDescription">

                    <label>Made by</label>
                    <input class="w3-input w3-border-bottom" type="text" name="by" id="newBy">

                    <label>Price</label>
                    <input class="w3-input w3-border-bottom" type="text" name="price" id="newPrice">

                    <label>Image</label>
                    <input class="w3-input w3-border-bottom" type="text" name="img" id="newImg">

                    <br>
                    <label>Img</label>
                    <input name="myImage" id="myImage" type="file">

                    <br><br>
                    <label>Category: </label>

                    <div id="addNewProductCategoryList">

                    </div>
                    <br>
                    <input type="submit" class="w3-btn w3-margin-top w3-deep-orange" value="Submit" id="modalAddNewProductBtn">

                </form>
            </div>
        </div>
    </div>

    <!-- modal - Add new Category -->
    <div id="addNewCategory" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container w3-padding-large">
                <span onclick="document.getElementById('addNewCategory').style.display='none'" class="w3-button w3-display-topright w3-xlarge w3-text-red">&times;</span>

                <!-- add new Category -->
                <div class="w3-cell-row w3-margin-bottom">
                    <div class="w3-container w3-cell w3-cell-middle">
                        <input class="w3-input w3-border" type="text" placeholder="New Category" id="modalNewCategoryInput">
                    </div>
                    <div class="w3-container w3-cell w3-cell-middle">
                        <button class="w3-button w3-large w3-circle w3-ripple w3-teal" onclick="modalAddNewCategoryBtn()">+</button>
                    </div>
                </div>

                <h3>Edit or delete needs to be done in Database</h3>
                <div id="modalCategoryList" class="modalCategoryList">
                    <table class="w3-table" id="categoryListTable">
                    </table>
                </div>
            </div>
        </div>
    </div>


</body>
<script>
</script>

</html>