<div class="w3-container">
    <table class="w3-table w3-striped w3-margin-top" style="width:1000px; w3-margin">
        <tr>
            <th>ID</th>
            <th>Product name</th>
            <th>Description</th>
            <th>Made By</th>
            <th>Price</th>
            <th>created Date</th>
        </tr>

        <% for(var i=0; i<products.length; i++) { %>
            <tr>
                <td id="<%=products[i]._id %>">
                    <%= products[i]._id %>
                </td>
                <td>
                    <%= products[i].productName %>
                </td>
                <td>
                    <%= products[i].description %>
                </td>
                <td>
                    <%= products[i].by %>
                </td>
                <td>
                    <%= products[i].price %>
                </td>
                <td>
                    <%= products[i].createDay %>
                </td>
                <td>
                    <i id="<%=products[i]._id %>" class="fa fa-times cursorPointer" onclick="deleteProduct(this.id)" aria-hidden="true"></i>
                </td>
            </tr>
            <% } %>

    </table>

    <button class="w3-button w3-margin-top w3-green" onclick="document.getElementById('addProduct').style.display='block'"><i class="fa fa-plus" aria-hidden="true"></i></button>

    <div id="productUpdate" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container">
                <span onclick="document.getElementById('productUpdate').style.display='none'" class="w3-button w3-display-topright"><i class="fa fa-times"></i></span>
                <p>Some text in the Modal..</p>
                <p>Some text in the Modal..</p>
            </div>
        </div>
    </div>

    <div id="addProduct" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container">
                <div class="w3-card-4 w3-margin">

                    <div class="w3-container w3-green">
                        <h2>Add Product</h2>
                    </div>

                    <form id="addProductForm" class="w3-container">
                        <span onclick="document.getElementById('addProduct').style.display='none'" class="w3-button w3-display-topright"><i class="fa fa-times"></i></span>
                        <p>
                            <input id="productName" class="w3-input" type="text">
                            <label>Product name</label></p>
                        <p>
                            <input id="description" class="w3-input" type="text">
                            <label>Description</label></p>
                        <p>
                            <input id="by" class="w3-input" type="text">
                            <label>by</label></p>
                        <p>
                            <input id="img" class="w3-input" type="text">
                            <label>Image</label></p>
                        <p>
                            <input id="price" class="w3-input" type="text">
                            <label>Price</label></p>

                    </form>
                    <p><button onclick="addProduct()" class="w3-button w3-circle w3-teal w3-margin"><i class="fa fa-plus" aria-hidden="true"></i></button></p>

                </div>
            </div>
        </div>
    </div>

